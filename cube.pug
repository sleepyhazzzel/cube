doctype html
html(lang="en")
  head
    title= "Rubik's Cube Minesweeper"
    meta(charset="utf-8")
    link(type="text/css" rel="stylesheet" href="./style/css/cube.min.css")
    

  body
    - var faces = ['left', 'right', 'back', 'front', 'bottom', 'top']
    #cube_canvas
      #cube
        each face in faces
          div(class=face + " face")
            - var n = 0
            each element in [0, 1, 2, 3, 4, 5, 6, 7, 8]
              - n++
              .cell(data-cell=n) #{n}


    script(type="text/javascript" src="./JS/cube.js")